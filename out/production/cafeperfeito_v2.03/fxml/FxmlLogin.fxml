<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../style/min/cafeperfeito.min.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.tlmacedo.cafeperfeito.controller.ControllerLogin">
    <children>
        <VBox prefHeight="180.0" prefWidth="451.0">
            <children>
                <Label fx:id="lblTitulo" alignment="CENTER" prefWidth="450.0" styleClass="lbl_titulo" text="Login no sistema" textAlignment="CENTER" />
                <HBox>
                    <children>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                            <image>
                                <Image url="@../image/ico/ic_usuario_dp32.png" />
                            </image>
                        </ImageView>
                        <JFXComboBox fx:id="jfxCboUsuario" labelFloat="true" prefWidth="390.0" promptText="Usuario">
                            <HBox.margin>
                                <Insets top="5.0" />
                            </HBox.margin>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                        </JFXComboBox>
                    </children>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox>
                    <children>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                            <image>
                                <Image url="@../image/ico/ic_password_dp32.png" />
                            </image>
                        </ImageView>
                        <JFXPasswordField fx:id="jfxPswSenha" labelFloat="true" prefWidth="390.0" promptText="Senha">
                            <HBox.margin>
                                <Insets top="5.0" />
                            </HBox.margin>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                        </JFXPasswordField>
                    </children>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox>
                    <children>
                        <ImageView fitHeight="33.0" fitWidth="207.0" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                            <image>
                                <Image url="@../image/ico/assinatura_logo.png" />
                            </image>
                        </ImageView>
                        <JFXButton fx:id="jfxBtnOk" defaultButton="true" text="OK">
                            <HBox.margin>
                                <Insets left="205.0" top="3.0" />
                            </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="jfxBtnCancela" cancelButton="true" text="Cancela">
                            <HBox.margin>
                                <Insets left="10.0" top="3.0" />
                            </HBox.margin>
                        </JFXButton>
                    </children>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
